---
import FooterSidebar from '@components/nav/FooterSidebar.astro';
import LayoutCommon from './LayoutCommon.astro';
import NavBarSidebar from '@components/nav/NavBarSidebar.astro';
import SideBar from '@components/nav/SideBar.astro';

const { title } = Astro.props;
---

<LayoutCommon title={title}>
	<NavBarSidebar />

	<SideBar />

	<div class="flex pt-16 overflow-hidden bg-gray-50 dark:bg-gray-900">
		<div
			id="main-content"
			class="relative w-full h-full overflow-y-auto bg-gray-50 lg:ml-64 dark:bg-gray-900 min-h-screen"
		>
			<slot />

			<FooterSidebar />
		</div>
	</div>
</LayoutCommon>
