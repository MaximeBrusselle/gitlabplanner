---
import Navbar from "@components/Navbar.astro";

const { title } = Astro.props;
---

<html lang="en" class="h-full max-h-100vh bg-gray-50 dark:bg-gray-900">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="h-full bg-gray-50 dark:bg-gray-900">
    <Navbar />
    <main class="max-w-[70vw] mx-auto px-4 sm:px-6 lg:px-8 py-8 bg-gray-50 dark:bg-gray-900 relative z-0">
      <article class="bg-white dark:bg-gray-800 shadow sm:rounded-lg p-6">
        <slot />
      </article>
    </main>
  </body>
</html>