---
import CopyrightNotice from "@components/nav/CopyrightNotice.astro";
const footerItems = [
	{ href: "/terms", label: "Terms and conditions" },
	{ href: "/privacy", label: "Privacy Policy" },
	{ href: "/licensing", label: "Licensing" },
	{ href: "/cookie", label: "Cookie Policy" },
	{ href: "/contact", label: "Contact" },
];

const socialLinks = [
	{
		href: "#",
		iconName: "facebook",
		icon: `<path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"/>`,
	},
	{
		href: "#",
		iconName: "twitter",
		icon: `<path d="M22 4s-.7 2.1-2 3.4c1.6 10-9.4 17.3-18 11.6 2.2.1 4.4-.6 6-2C3 15.5.5 9.6 3 5c2.2 2.6 5.6 4.1 9 4-.9-4.2 4-6.6 7-3.8 1.1 0 3-1.2 3-1.2z"/>`,
	},
	{
		href: "https://github.com/maximebrusselle/gitlabplanner",
		iconName: "Github",
		icon: `<path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/><path d="M9 18c-4.51 2-5-2-7-2"/>`,
	},
];
---

<footer class="p-4 my-6 mx-4 bg-white rounded-lg shadow md:flex md:items-center md:justify-between md:p-6 xl:p-8 dark:bg-gray-800">
	<ul class="flex flex-wrap items-center mb-6 md:mb-0">
		{
			footerItems.map((item) => (
				<li>
					<a href={item.href} class="mr-4 text-sm font-normal text-gray-500 hover:underline md:mr-6 dark:text-gray-400">
						{item.label}
					</a>
				</li>
			))
		}
	</ul>
	<div class="flex space-x-6 sm:justify-center">
		{
			socialLinks.map((link) => (
				<a href={link.href} class="text-gray-500 hover:text-gray-900 dark:text-gray-400 dark:hover:text-white">
					<svg
						xmlns="http://www.w3.org/2000/svg"
						fill="currentColor"
						width="24"
						height="24"
						viewBox="0 0 24 24"
						aria-hidden="true"
						fill="none"
						stroke="currentColor"
						stroke-width="2"
						stroke-linecap="round"
						stroke-linejoin="round"
					>
						<Fragment set:html={link.icon} />
					</svg>
				</a>
			))
		}
	</div>
</footer>

<CopyrightNotice />
