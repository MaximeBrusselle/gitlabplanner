---
import type { User } from "@myTypes/User";

interface Props {
    member: User;
}

const { member }: Props = Astro.props;
---

<div class="w-full sm:w-1/2 md:w-1/3 lg:w-1/4 xl:w-1/5 flex flex-col items-center p-4 bg-gray-50 dark:bg-gray-700 rounded-lg h-36">
    <img src={member.imageUrl} alt={member.name} class="w-16 h-16 rounded-full border-2 border-gray-200 dark:border-gray-600 mb-2" />
    <span class="text-sm text-gray-900 dark:text-white text-center break-words">{member.name}</span>
</div>
