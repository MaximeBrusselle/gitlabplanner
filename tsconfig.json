{
	"extends": "astro/tsconfigs/strict",
	"include": [".astro/types.d.ts", "**/*"],
	"exclude": ["dist"],
	"compilerOptions": {
		"jsx": "react-jsx",
		"jsxImportSource": "react",
		"baseUrl": "./src",
		"paths": {
			"@components/*": ["./components/*"],
			"@layouts/*": ["./layouts/*"],
			"@pages/*": ["./pages/*"],
			"@db/*": ["./db/*"],
			"@i18n/*": ["./i18n/*"]
		},
		"strictNullChecks": true,
		"allowJs": true
	}
}
