{
	"extends": "astro/tsconfigs/strict",
	"include": [".astro/types.d.ts", "**/*"],
	"exclude": ["dist"],
	"compilerOptions": {
		"jsx": "react-jsx",
		"jsxImportSource": "react",
		"baseUrl": ".",
		"paths": {
			"@css/*": ["./src/css/*"],
			"@components/*": ["./src/components/*"],
			"@layouts/*": ["./src/layouts/*"],
			"@pages/*": ["./src/pages/*"],
			"@db/*": ["./src/db/*"],
			"@i18n/*": ["./src/i18n/*"],
			"@myTypes/*": ["./src/types/*"],
			"@utils/*": ["./src/utils/*"],
			"@clerk/*": ["./src/clerk/*"]
		},
		"strictNullChecks": true,
		"allowJs": true
	}
}
